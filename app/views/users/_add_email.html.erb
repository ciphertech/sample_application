<div class="grey_overlay" id="add_email_popup">
  <div class="pop_up" >
    <div class="popup_inner_div">
      <a href="javascript:void(0);" onclick="jQuery('#add_email_popup').fadeOut();" class="popup_close_btn">&nbsp;</a>
      <div class="popup_content">
        <%= form_for :group, :url=>{:controller=>:users, :action => 'add_email'},:remote=>true do |f|  %>
          <span class="popup_heading">Add Email to Crowd</span>
          <table width="100%" class="popup_form_table">
            <tr>
              <td  align="left" width="30%"><span class="form_field_name">Email:</span></td>
              <td align="left" ><%= text_field 'user', 'email', :style=>"width:200px", :id=>"add_email_field"%><br/>
                <span id="add_email_field_error" class="form_error"></span>
              </td>
            </tr>
            <tr>
              <td><input type="hidden" value="" id="add_email_group_id" name="group[id]"/> </td>
              <td>
                <input type="submit" class="blue_btn" value="Add" onclick="return add_email_form();"/>
                <a href="javascript:void(0);" class="action_link" id="import_cont_link">Add Gmail Contacts</a>
              </td>
            </tr>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>


<script type="text/javascript">
  jQuery(document).ready(function(){
      jQuery("#add_email_popup .pop_up").css({"position":"fixed","top":(jQuery(window).height()-jQuery("#edit_group_popup .pop_up").height())/2+"px"});
      jQuery("#add_email_popup .pop_up").css({"position":"fixed","left":(jQuery(window).width()-jQuery("#edit_group_popup .pop_up").width())/2+"px"});
  });
</script>
